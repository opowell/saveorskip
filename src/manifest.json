{
  "name": "Save or skip",
  "description": "Save or skip pages you visit, and get new recommendations based on your history.",
  "version": "1.0.12",
  "author": "opowell@gmail.com",

  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "Save or skip",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "background": {
      "page": "bg.html"
    },
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scrapers/scraper.js"]
    }
  ],

  "permissions": ["tabs", "http://*/", "https://*/", "storage", "unlimitedStorage"],

  "options_page": "options/options.html"
}
